{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

    body {
        font-family: Arial, sans-serif;
    }
        form {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        input[type="text"],
        textarea {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
        }
        button[type="submit"] {
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        button[type="submit"]:hover {
            background-color: #45a049;
        }
        a {
            color: #007bff; /* Couleur des liens */
             text-decoration: none;
        }
      
        .product-container {
            margin-top: 20px;
        }
        .product-title {
            font-size: 18px;
            margin-bottom: 5px;
        }
        .product-description {
            margin-bottom: 10px;
        }
        .admin-links {
            margin-top: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'product/header.html.twig' %}

    <div class="product-container">
        <h1>Liste des produits</h1>

        {% if products is not empty %}
            {% for product in products %}
                <div class="product-item">
                    <h3 class="product-title">
                        <a href="{{ path('app_product_show', {'slug': product.slug}) }}">
                            {{ product.title | raw }} 
                        </a>
                    </h3>
                    <p class="product-description">
                        {{ product.description | raw }}
                    </p>

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="admin-links">
                            <form method="POST" action="{{ path('app_product_delete', {'slug': product.slug}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button type="submit">Supprimer</button>
                            </form> 
                             <a href="{{ path('app_product_edit', {'slug': product.slug}) }}"><button>Modifier</button></a> 
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        {% else %}
            <p>Aucun produit trouv√©</p>
        {% endif %}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="product-container">
            <h2>Creat new Product</h2>
            {{ form(form) }}
        </div>
    {% endif %}
{% endblock %}

